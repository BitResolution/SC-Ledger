<configuration>
    <appender name="root" class="ch.qos.logback.core.FileAppender">
        <file>ledger.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="root" />
    </root>
</configuration>